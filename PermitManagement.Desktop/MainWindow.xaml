<Window x:Class="PermitManagement.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:presentation="clr-namespace:PermitManagement.Presentation;assembly=PermitManagement.Presentation"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        d:DataContext="{d:DesignInstance {x:Type presentation:PermitViewModel}}"
        mc:Ignorable="d"
        Title="Permit Management"
        Width="710"
        Height="600"
        Background="#f8f9fa">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top panel: filters and controls -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" >
            <TextBlock Text="Zone:" VerticalAlignment="Center" FontWeight="Bold" Margin="5,0"/>
            <ComboBox Width="80"
                      Margin="5,0"
                      ItemsSource="{Binding AvailableZones}"
                      SelectedItem="{Binding SelectedZone, Mode=TwoWay}" />

            <!-- Vehicle registration -->
            <TextBlock Text="Vehicle:" VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBox Width="100"
                     Margin="5,0"
                     Text="{Binding VehicleRegistration, 
                                    Mode=TwoWay, 
                                    UpdateSourceTrigger=PropertyChanged, 
                                    ValidatesOnDataErrors=True}"
                     ToolTip="{Binding (Validation.Errors)[0].ErrorContent, 
                                       RelativeSource={RelativeSource Self}}"/>

            <!-- Start date -->
            <TextBlock Text="Start Date:" VerticalAlignment="Center" FontWeight="Bold"/>
            <DatePicker Width="130"
                        Margin="5,0"
                        SelectedDate="{Binding StartDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <!-- Duration selection -->
            <TextBlock Text="Duration:" VerticalAlignment="Center" FontWeight="Bold"/>
            <ComboBox Width="110"
                      Margin="5,0"
                      SelectedItem="{Binding SelectedDuration, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <ComboBox.ItemsSource>
                    <x:Array Type="{x:Type sys:String}" 
                             xmlns:sys="clr-namespace:System;assembly=mscorlib">
                        <sys:String>1 Day</sys:String>
                        <sys:String>1 Week</sys:String>
                        <sys:String>1 Month</sys:String>
                        <sys:String>1 Year</sys:String>
                    </x:Array>
                </ComboBox.ItemsSource>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10" >

            <Controls:ToggleSwitch
                    Header="Permit Mode"
                    OnContent="All"
                    OffContent="Zone"
                    IsOn="{Binding ShowAllPermits, Mode=TwoWay}"
                    Margin="10, 0, 0, 0"
                    Width="150"
                    Height="50"
                    Foreground="Black"/>    
         
            <TextBlock Text="Has valid permit"
                       Foreground="Green"
                       FontWeight="Bold"
                       Visibility="{Binding HasValidPermit, Converter={StaticResource BoolToVis}}"
                       Margin="10,0,0,0"/>

                <TextBlock Text="Does not have permit"
                       Foreground="Red"
                       FontWeight="Bold"
                       Visibility="{Binding NoValidPermit, Converter={StaticResource BoolToVis}}"
                       Margin="10,0,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10" >
            <TextBlock Text="{Binding StatusMessage, NotifyOnTargetUpdated=True}"
                       Foreground="Green"
                       FontWeight="Bold"
                       Margin="10,0,0,0"
                       Opacity="0">     
                <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="{x:Static Binding.TargetUpdatedEvent}">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="1" To="0"
                                     BeginTime="0:0:0"
                                     Duration="0:0:2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </TextBlock.Triggers>
            </TextBlock>

            <Button Content="Add Permit"
                    Padding="10,5"
                    Margin="10,0,0,0"
                    Command="{Binding AddPermitCommand}" />

        </StackPanel>

        <!-- Data grid of permits -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Permits}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  AlternatingRowBackground="#eef"
                  HeadersVisibility="Column"
                  BorderBrush="#ccc"
                  BorderThickness="1">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Focusable" Value="False"/>
                    <Setter Property="IsHitTestVisible" Value="False"/>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Vehicle" Binding="{Binding Vehicle.Registration}" Width="*"/>
                <DataGridTextColumn Header="Zone" Binding="{Binding Zone.Name}" Width="80"/>
                <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat=d}" Width="120"/>
                <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, StringFormat=d}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
